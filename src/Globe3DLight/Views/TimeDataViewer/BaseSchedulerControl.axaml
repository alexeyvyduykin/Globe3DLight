<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Markers="clr-namespace:Globe3DLight.Views.TimeDataViewer"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Globe3DLight.Views.TimeDataViewer.BaseSchedulerControl">
  
<ItemsControl.Styles>
    <Style Selector="ItemsControl > ContentPresenter">
      <Setter Property="Canvas.Left" Value="{Binding Path=AbsolutePositionX}"></Setter>
      <Setter Property="Canvas.Top" Value="{Binding Path=AbsolutePositionY}"></Setter>
      <Setter Property="ZIndex" Value="{Binding Path=ZIndex}"></Setter>
    </Style>

    <Style Selector="Canvas.h1">

    </Style>

  </ItemsControl.Styles>


  <!--
  <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <Canvas x:Name="SchedulerCanvas" Classes="h1"></Canvas>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      -->

  <ItemsControl.ItemTemplate>
    <DataTemplate DataType="{x:Type Markers:SchedulerMarker}">
      <ContentPresenter Content="{Binding Path=Shape}"/>
    </DataTemplate>
  </ItemsControl.ItemTemplate>

</UserControl>
